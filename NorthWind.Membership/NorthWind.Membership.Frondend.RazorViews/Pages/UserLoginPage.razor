@attribute [Route(RouteTemplate)]

<ErrorBoundary @ref=ErrorBoundoryRef>
    <ChildContent>
        <UserLoginComponent ViewModel=ViewModel />
    </ChildContent>
    <ErrorContent>
        <NorthWind.Razor.Components.Exceptions.ExceptionDisplay Exception="context" />
        <button class="btn bt-danger" @onclick=Recover>
            @CommonMessages.OK
        </button>
    </ErrorContent>
</ErrorBoundary>


